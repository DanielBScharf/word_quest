<body>
  <%#= render "shared/grid" %>
  <div id="box" style="border: 2px solid black; width: 1260px; height: 720px; margin-top:15px; margin-left:110px;">
    <div id="sprite" style="left: 150px; bottom: 0px; top: 300px; position:absolute;"></div>
    <div id="sprite2" style="left: 150px; bottom: 0px; top: 150px; position:absolute;"></div>
    <%= link_to "rat", character_monster_path(@character, @monster = Monster.find_by_name('rat')), class:"btn btn-danger" %>
    <%= link_to "wolf", character_monster_path(@character, @monster = Monster.find_by_name('wolf')), class:"btn btn-danger" %>
    <%= link_to "bat", character_monster_path(@character, @monster = Monster.find_by_name('bat')), class:"btn btn-danger" %>
  </div>
  <style>
    #rat{
      width: 75px;
      height: 60px;
      background-image: url(<%= asset_path('monster1.png') %>);
      position: relative;
      transition: 0.1s linear;
    }

    #wolf{
      width: 120px;
      height: 70px;
      background-image: url(<%= asset_path('monster2.png') %>);
      position: relative;
      transition: 0.1s linear;
    }

    #bat{
      width: 80px;
      height: 55px;
      background-image: url(<%= asset_path('monster3.png') %>);
      position: relative;
      transition: 0.1s linear;
    }

    #box {
      background-image: url(<%= asset_path('forest.jpg') %>);
      width: 100%;
      height: 100%;
    }

    #sprite2 {
      height: 80px;
      width: 80px;
      background-image: url(<%= asset_path('back.png') %>);
      position: relative;
      transition: 0.1s linear;
    }

    #sprite {
      width: 45px;
      height: 60px;
      background-image: url(<%= asset_path(@character.icon_name.downcase) %>);
      position: relative;
      transition: 0.1s linear;
    }
  </style>
  <%= link_to "Go back to village", show_village_character_maps_path(@character), class:'btn btn-danger' %>
</body>
