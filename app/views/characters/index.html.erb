<div class="container">
  <div class="contain_btns">
    <%= link_to new_user_character_path(current_user.id), class: 'text-decoration-none text-dark back-to-form flex' do %>
      <h2 class='create-btn nes-btn is-warning'>Create new character</h2>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: 'text-decoration-none text-dark back-to-form flex' do %>
        <h2 class='create-btn nes-btn'>Log out</h2>
      <% end %>
    <% end %>
  </div>
  <h2>Choose a character you want to play!</h2>
  <div class="cards">
    <% @characters.each do |character| %>
      <%= link_to user_character_path(current_user, current_user.current_character_id = Character.find(character.id)), class:'text-decoration-none text-dark' do %>
        <div class="card ns-border">
          <%= image_tag asset_path( character.icon_name.downcase) %>
          <ul>
            <li>
              <%= character.name %>
            </li>
            <li>
              <%= character.language %>
            </li>
            <li>
              <% case character.level%>
              <% when 1%>
              <%= 'A1'%>
              <% when 2%>
              <%= 'A2'%>
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>
</div>
