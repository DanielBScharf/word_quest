<div style="background-color: #108DE0; height: 100vh;">
  <div class="d-flex justify-content-center" style="background-color:#108DE0">
    <div class="container sign-up p-3 px-4"style=" width: 100vw; background-size:cover;whitesmoke;padding-left:15px;pagging-right:15px; height:600px;">
      <div class="contain_btns" style="height:70px;" >
        <%= link_to new_character_path(current_user.id), class: 'text-decoration-none text-dark back-to-form flex' do %>
          <div class="d-flex">
            <h2 class='create-btn nes-btn is-warning'>Create new character</h2>
          </div>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: 'text-decoration-none text-dark' do %>
            <h2 class='create-btn nes-btn'style="background-color:#108DE0; color:white;">Log out</h2>
          <% end %>
        <% end %>
      </div>
      <div class="d-flex">
        <div class="justify-content-start">
          <h2 style="margin-top:30px; margin-bottom:30px;margin-right:40px;font-size:17px;">Choose a character you want to play!</h2>
        </div>
        <div class="justify-content-end">
          <h2 style="margin-top:30px; margin-bottom:30px;margin-right:15px;font-size:19px;">Cooming Soon</h2>
        </div>
      </div>
      <div class="container" style="margin-top:0px;">
        <div class="d-flex">
          <div class="cards" style="margin-top:0px;width: 600px;">
            <% @characters.each do |character| %>
              <%= link_to character_path(character), style:"height:360px;", class:'text-decoration-none text-dark' do %>
                <div class="card ns-border" style="font-size:14px;">
                  <%= image_tag asset_path( character.icon_name.downcase) %>
                  <ul>
                    <li>
                      <%= character.name %>
                    </li>
                    <li>
                      <%= character.language %>
                    </li>
                    <li>
                      <% case character.level%>
                      <% when 1%>
                      <%= 'A1'%>
                      <% when 2%>
                      <%= 'A2'%>
                    <% end %>
                  </li>
                </ul>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="d-flex">
          <div class="cards d-flex" style="margin-top: 0px;">
            <div class="card ns-border" style="font-size: 14px; width: 194px; height: 240px;" id="doug">
            </div>
            <div class="card ns-border" style="font-size: 14px; width: 194px; height: 240px;" id="sou">
            </div>
            <div class="card ns-border" style="font-size: 14px; width: 194px; height: 240px;" id="yann">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <style>
    #doug {
    width: 100px;
    height: 100px;
    background-image: url(<%= asset_path('gdoug.png') %>);
    position: relative;
    transition: 0.1s linear;
    background-repeat: no-repeat;
    }
    #sou {
    width: 100px;
    height: 100px;
    background-image: url(<%= asset_path('gsou.png') %>);
    position: relative;
    transition: 0.1s linear;
    background-repeat: no-repeat;
    }
    #yann {
    width: 100px;
    height: 100px;
    background-image: url(<%= asset_path('gyann.png') %>);
    position: relative;
    transition: 0.1s linear;
    background-repeat: no-repeat;
    }
